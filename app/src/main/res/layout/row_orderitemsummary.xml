<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/productRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProductName"
                fontPath="@string/font_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:ellipsize="end"
                android:paddingLeft="@dimen/_5sdp"
                android:text="Products"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/tvProductDetails"
                fontPath="@string/font_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_toLeftOf="@id/tvPriceRowUnity"
                android:paddingLeft="@dimen/_5sdp"
                android:text="2  *  60  *  28"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/tvPriceRowUnity"
                fontPath="@string/font_medium"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/tvDecoPrice"
                android:paddingLeft="@dimen/_5sdp"
                android:text="3360"
                android:textColor="@color/light_orange"
                android:textDirection="rtl"
                android:textSize="@dimen/_14ssp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/tvDecoPrice"
                fontPath="@string/font_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text=",00 Da"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_9ssp"
                tools:ignore="MissingPrefix" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>