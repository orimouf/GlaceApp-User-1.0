<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlQtyNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitleOrderNumber"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text=": ORDER ID"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/tvOrderNumber"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_toLeftOf="@id/tvTitleOrderNumber"
                    android:text="S7KQ0F92LO"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />
                <TextView
                    android:id="@+id/tvOrderDate"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="17/07/2020"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlQtyNo"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_1sdp">

                <TextView
                    android:id="@+id/tvQty"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text=": QTY"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/tvQtyNumber"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toLeftOf="@id/tvQty"
                    android:text="S7KQ0F92LO"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/tvPaymentType"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="COD"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlQty"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tvDelivery"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text=" : STATUS"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/tvOrderStatus"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toLeftOf="@id/tvDelivery"
                    android:text="test"
                    android:textColor="@color/light_orange"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="MissingPrefix" />
                <TextView
                    android:id="@+id/tvPrice"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="$80"
                    android:textColor="@color/light_orange"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="MissingPrefix" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlDelivery"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:id="@+id/ivStatus1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_round_uncheck"/>
                <View
                    android:layout_width="3dp"
                    android:background="@color/gray"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:id="@+id/view1"/>
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:tint="@color/gray"
                    android:layout_gravity="center"

                    android:id="@+id/ivStatus2"
                    android:src="@drawable/ic_round_check"/>
                <View
                    android:layout_width="3dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:layout_gravity="center"
                    android:id="@+id/view2"
                    />
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:tint="@color/gray"
                    android:layout_gravity="center"
                    android:id="@+id/ivStatus3"
                    android:src="@drawable/ic_round_check"/>
                <View
                    android:layout_width="3dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:layout_gravity="center"
                    android:id="@+id/view3"
                    />
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:tint="@color/gray"
                    android:layout_gravity="center"

                    android:id="@+id/ivStatus4"
                    android:src="@drawable/ic_round_check"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlDelivery"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toLeftOf="@id/llView"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvOrderStatus1"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="@string/order_place1"
                    android:textColor="@color/light_orange"
                    android:textSize="@dimen/_11ssp"
                    tools:ignore="MissingPrefix" />
                <View
                    android:layout_width="3dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tvOrderStatus2"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="@string/order_ready1"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/light_orange"
                    android:textSize="@dimen/_11ssp"
                    tools:ignore="MissingPrefix" />
                <View
                    android:layout_width="3dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tvOrderStatus3"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="@string/on_the_way1"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/light_orange"
                    android:textSize="@dimen/_11ssp"
                    tools:ignore="MissingPrefix" />
                <View
                    android:layout_width="3dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/v3"
                    />
                <TextView
                    android:id="@+id/tvOrderStatus4"
                    fontPath="@string/font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="@string/order_delivered1"
                    android:textColor="@color/light_orange"
                    android:textSize="@dimen/_11ssp"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_below="@id/llData"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_7sdp"
                android:id="@+id/ivArrow"
                android:src="@drawable/ic_down_arrow"
                android:tint="@color/black" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>